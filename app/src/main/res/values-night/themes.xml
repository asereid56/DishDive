<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Dark Mode Styles -->
    <style name="Base.Theme.DishDive.Dark" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/accent</item>
        <item name="colorOnPrimary">@color/secondary</item>
        <item name="android:windowBackground">#333333</item>
        <item name="android:navigationBarColor">#333333</item>
        <item name="android:textColorPrimaryInverse">@android:color/white</item>
        <item name="android:textColorSecondaryInverse">@android:color/white</item>
    </style>

    <style name="Theme.DishDive.Dark" parent="Base.Theme.DishDive.Dark" />

    <!-- Style for the splash screen in dark mode -->
    <style name="Theme.Splash.Dark" parent="Base.Theme.DishDive.Dark">
        <!-- Hide the action bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>
